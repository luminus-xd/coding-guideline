{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Luminus Docs",
  "colors": {
    "primary": "#1653a3",
    "light": "#079bc9",
    "dark": "#154380"
  },
  "favicon": "/favicon.svg",
  "fonts": {
    "heading": {
      "family": "Mobo",
      "source": "https://fonts.luminus.dev/mobo-bold.woff2",
      "format": "woff2",
      "weight": 700
    },
    "body": {
      "family": "Mobo",
      "source": "https://fonts.luminus.dev/mobo-regular.woff2",
      "format": "woff2",
      "weight": 400
    }
  },
  "navigation": {
    "tabs": [
      {
        "tab": "Web Coding Tips",
        "groups": [
          {
            "group": "Base",
            "pages": [
              "coding-tips/introduction"
            ]
          },
          {
            "group": "HTML",
            "pages": [
              "coding-tips/html/best-practices",
              "coding-tips/html/modern-features"
            ]
          },
          {
            "group": "CSS",
            "pages": [
              "coding-tips/css/variables",
              "coding-tips/css/modern-layout"
            ]
          },
          {
            "group": "JavaScript",
            "pages": [
              "coding-tips/javascript/introduction",
              "coding-tips/javascript/typescript-essentials",
              "coding-tips/javascript/performance-tips"
            ]
          },
          {
            "group": "Media",
            "pages": [
              "coding-tips/media/image-optimization",
              "coding-tips/media/video-best-practices"
            ]
          },
          {
            "group": "Essentials",
            "pages": [
              "essentials/markdown",
              "essentials/code",
              "essentials/images",
              "essentials/settings",
              "essentials/navigation",
              "essentials/reusable-snippets"
            ]
          }
        ]
      },
      {
        "tab": "Music",
        "groups": [
          {
            "group": "API Documentation",
            "pages": [
              "api-reference/introduction"
            ]
          },
          {
            "group": "Endpoint Examples",
            "pages": [
              "api-reference/endpoint/get",
              "api-reference/endpoint/create",
              "api-reference/endpoint/delete",
              "api-reference/endpoint/webhook"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Documentation",
          "href": "https://mintlify.com/docs",
          "icon": "book-open-cover"
        },
        {
          "anchor": "Blog",
          "href": "https://mintlify.com/blog",
          "icon": "twitter"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/icon-round.webp",
    "dark": "/logo/icon-round.webp"
  },
  "footer": {
    "socials": {
      "x": "https://x.com/midnight_dev2",
      "github": "https://github.com/luminus-xd"
    }
  }
}